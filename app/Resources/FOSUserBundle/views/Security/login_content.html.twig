{% extends "AppBundle:Layouts:layout.html.twig"%}
{% trans_default_domain 'FOSUserBundle' %}

{% block content%}

<div class="global">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 margBot pull-left slider-box">
                    <div class="content-box1">
                        <h2 class="color2 text-center">
                            <span>Ingreso Usuario
                            </span>
                        </h2>

                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class='fos_user_registration_register'>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder='User Name' class='form-control placeholder-no-fix' />
    </div>

    <div class="form-group">
         
        <input type="password" id="password" name="_password" required="required" placeholder='Password' class='form-control placeholder-no-fix' />
    </div>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Recuerdame</label>

    <div class="form-actions">
        <a class="btn btn-default" href="{{ path('fos_user_registration_register') }}">Regreso a registro</a>
        <input type="submit" id="_submit" name="_submit" value="Entrar" class="btn btn-success">
    </div>
</form>


                        
                        
                    </div>
                    <!--bootstrap slider starts-->
                    
                        
                    </div>
                    
                </div>
                <!--bootstrap slider ends-->
                
                
            </div>
            
        </div>
        

        
    </div>
    </div> </div>

    {% endblock%}