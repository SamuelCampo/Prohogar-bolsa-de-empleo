{% extends "AppBundle:Layouts:layout.html.twig"%}
{% block content%}

<div class="global">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 margBot pull-left slider-box">
                    <div class="content-box1">
                        <h2 class="color2 text-center">
                            <span>Experiencia Laboral 
                            </span>
                        </h2>

                        {% block body %}
    <br>
    <div class="table-responsive"> 
    <table class="table">
        <thead>
            <tr>
                <th>Cargo</th>
                <th>Empresa</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for experiencium in experiencias %}
            <tr>
                <td>{{ experiencium.cargo }}</td>
                <td>{{ experiencium.empresa }}</td>
                <td>{% if experiencium.fechaInicio %}{{ experiencium.fechaInicio|date('Y-m-d') }}{% endif %}</td>
                <td>{% if experiencium.fechaFin %}{{ experiencium.fechaFin|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                            <a href="{{ path('experiencia_show', { 'id': experiencium.id }) }}"><button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Ver Curriculum"><span class="glyphicon glyphicon-eye-open"></span></button></a>
                            <a href="{{ path('experiencia_edit', { 'id': experiencium.id }) }}"><button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Editar"><span class="glyphicon glyphicon-pencil"></span></button></a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
        <a href="{{ path('experiencia_new') }}"><span class="glyphicon glyphicon-plus"> Nueva Experiencia Laboral</span></a><br><br>
        <a href="{{ path('curriculum_index') }}" class="btn btn-info">Regresar a la hoja de vida</a>
{% endblock %}

                        
                        
