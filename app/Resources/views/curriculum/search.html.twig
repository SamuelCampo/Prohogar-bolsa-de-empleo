{% extends "AppBundle:Layouts:layout.html.twig"%}
{% block content%}
<style>
.form-group {
    margin-bottom: 15px;
    float: none !important;  
    width: 100% !important; 
}    
</style>
<div class="global">
        <div class="container">
            <div class="row">
            <div class="col-md-12">
                    <div class="content-box1">
                        <h2 class="color2 text-center">
                            <span style="color:#aabd7d;">Encuentra el candidat@ ideal
                            </span>
                        </h2>
                        
                        {{ form_start(form, {'action': path('search'), 'method': 'POST'}) }}
                            <div class=>
                                    <div class="form-group row">
                                        <div class="col-xs-12 col-md-3">
                                            <label for="ex3">Ciudad</label>
                                            {{ form_widget(form.ciudad) }}
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <label for="ex3">Disponibilidad</label>
                                            {{ form_widget(form.tipoTrabajo) }}
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <label for="ex3">Oficios</label>
                                            {{ form_widget(form.intereses) }}
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <label for="ex3">Sector</label>
                                            {{ form_widget(form.sectorVivienda) }}
                                        </div>
                                    </div>
                            <input type="submit" value="Buscar" class="btn btn-success btn-lg btn-block" />        
                            </div>
                           
                        {{ form_end(form) }}
                        
                    </div>                
            </div>
                <div class="col-lg-12 col-md-12 col-sm-12 margBot pull-left slider-box">
                    <div class="content-box1">
                        <h2 class="color2 text-center">
                            <span>Nuestra Base de Datos
                            </span>
                        </h2>

                        {% block body %}
    {% if pagination is not empty %}  
    <br>
        {% for curriculum in pagination %}
        <a href="{{ path('curriculum_show', { 'id': curriculum.id }) }}">
            <div class="col-md-12 modulo">
                <div class="row">
                    <div class="col-md-2">
                {%set imagen=curriculum.imagen%}
                {% if imagen is not empty%}
                    <img src="{{ asset ('uploads/images/users/'~ imagen) }}" class="img-responsive" alt="{{ curriculum.nombre }} {{ curriculum.apellido }}" width="100" height="100" />
                {%else%}
                     <td><img src="{{ asset ('assets/images/usuaria.png') }}" class="img-responsive" alt="{{ curriculum.nombre }} {{ curriculum.apellido }}" width="100" height="100" />
                {%endif%}
                    </div>
                <div class="col-md-8">
                    <div class="row">
                       <div class="col-md-12">
                            {%if app.user is not empty%}
                           <a href="{{ path('curriculum_show', { 'id': curriculum.id }) }}">{{ curriculum.nombre }} {{ curriculum.apellido }}</a>
                            {%endif%}
                           <p> {{ curriculum.telefono }}</p>
                            <p> {{ curriculum.direccion }}</p>
                            {%if app.user is not empty%}
                            <p><a href="{{ path('curriculum_show', { 'id': curriculum.id }) }}">Ver Curriculum <span class="glyphicon glyphicon-eye-open"></span></a></p>
                            {%endif%}                           
                       </div> 
                    </div>
                </div>
            </div>
                    <ul>
                    </ul>
            </div>
        </a>
        {% endfor %}
    <div class="navigation">
                                        {{knp_pagination_render(pagination)}}
                                    </div>
                                    <div class="clearfix"></div>
    {% else %}
    
        <a href="{{ path('curriculum_new') }}"><span class="glyphicon glyphicon-plus"> Nueva</span></a>
    
    {% endif %}
{% endblock %}

                        
                        
                    </div>
                    <!--bootstrap slider starts-->
                    
                        
                    </div>
                    
                </div>
                <!--bootstrap slider ends-->
                
                
            </div>
            
        </div>
        

        
    </div>
    </div> </div>

    {% endblock%}



